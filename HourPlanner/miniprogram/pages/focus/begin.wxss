.chose {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.clk{
  display: block;
  text-align: center;
  color: #2dccc1;
  top: 30vh;
  font-size: 40rpx;
  position: absolute;
  z-index: 1;
}
.canvas{
    width: 100vw;
    height: 100vh;
    background-color: #181818;
    position: relative;
    z-index: 0;
}
.but{
  background-color: #2dccc1;
  border-radius: 80rpx;
  width: 80%;
  height: 80rpx;
  font-size: 35rpx;
  position: absolute;
  z-index: 1;
  top: 800rpx
}