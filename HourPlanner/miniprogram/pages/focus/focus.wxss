page{
  background-color: #353535
}
.chose {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.but{
  background-color: #2dccc1;
  border-radius: 80rpx;
  width: 80%;
  height: 80rpx;
  font-size: 35rpx;
  position: absolute;
  z-index: 1;
  top: 60vh
}
.text{
  font-size:50rpx; 
  opacity: 0.7;
  color: #2dccc1;
  position: absolute;
  z-index: 1;
  top: 5vh
}
.picker{
  width: 180rpx;
  height: 80rpx;
  font-size: 45rpx;
  text-align: center;
  position: absolute;
  z-index: 2;
  top: 60vh
}
.canvas{
  width: 100vw;
  height: 100vh;
  position: fixed;
  z-index: -1;
}
.image{
  width: 100vw;
  height: 100vh;
  position: fixed;
  z-index: -1;
}