/* miniprogram/pages/record/record.wxss */
.column{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}
.userinfo-avatar{
  height: 130rpx;
  width: 130rpx;
  margin: 80rpx 0rpx 0rpx 0rpx;
  overflow: hidden;
  border-radius: 50%;
}
.icon{
  height: 50rpx;
  width: 50rpx;
  margin: 30rpx 50rpx 0rpx 30rpx;
  justify-content: center;
}
.button{
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  width: 100%;
  height: 100rpx;
  margin-top: 40rpx;
  text-align: center;
  padding: 0;
  line-height: 2.0
}
.text{
  margin-top: 25rpx;
  font-size: 30rpx;
}
.point{
  height: 50rpx;
  width: 50rpx;
  right: 50rpx;
  margin-top: 30rpx;
  position: absolute;
}
.hello{
  position: fixed;
  left: 0;
  font-size: 40rpx;
  white-space:pre-wrap;
}
.line{
  width:15%;
  border-bottom:1rpx solid white;
}


