/* miniprogram/pages/plan/plan.wxss */
.list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.frame{
  display: flex;
  flex-direction: column;
  width: 80%;
  height: 150rpx;
  background-color: #6df0de;
  border-radius: 50rpx;
  align-items: center;
  margin-top:40rpx;
}
.add_img{
  width: 50rpx;
  height: 50rpx;
  margin-top: 60rpx
}
.switch{
  position:fixed;
  margin: 100% 40%
}
.on{
  color: #0cd7bc;  
  border-bottom: 5rpx solid #0cd7bc;
}
.swiper-tab{  
  width: 100%;  
  text-align: center;  
  line-height: 80rpx;
}  
.swiper-tab-list{  
    font-size: 30rpx;  
    display: inline-block;  
    width: 50%;  
    color: #000000;  
}
.bird{
  display: flex;
  height: 190rpx;
  width: 254rpx;
  position: fixed;
  top: 300rpx;
  opacity: 0.2
}
.bg{
  height: 400rpx;
  width: 400rpx;
  margin-top: 200rpx;
  margin-bottom: 20rpx;
  top: 250rpx;
  opacity: 0.5;
}
.text{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 50rpx;
  white-space: pre-wrap;
  background-color:#6df0de;
  margin: 40rpx;
  border-radius: 50rpx
}